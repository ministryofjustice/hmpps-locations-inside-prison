{
  "name": "hmpps-locations-inside-prison",
  "version": "0.0.1",
  "description": "Residential locations",
  "repository": "git@github.com:ministryofjustice/hmpps-locations-inside-prison.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start-feature": " node $NODE_DEBUG_OPTION --env-file=feature.env dist/server.js | bunyan -o short",
    "start-feature:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js  --build --watch \" \"node esbuild/esbuild.config.js --dev-test-server\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "test:ci": "jest --runInBand --coverage --coverageDirectory=coverage",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open --e2e --browser chrome",
    "clean": "rm -rf dist node_modules",
    "rebuild": "npm run clean && npm i && npm run build"
  },
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest"
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.782.0",
    "@ministryofjustice/frontend": "^5.1.1",
    "@ministryofjustice/hmpps-auth-clients": "^0.0.1-alpha.4",
    "@ministryofjustice/hmpps-monitoring": "^0.0.1-beta.2",
    "@ministryofjustice/hmpps-rest-client": "^0.0.1-alpha.5",
    "applicationinsights": "^2.9.5",
    "axe-core": "^4.10.0",
    "body-parser": "^2.2.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.8.0",
    "connect-flash": "^0.1.1",
    "connect-redis": "^8.0.2",
    "cookie-parser": "^1.4.7",
    "csrf-sync": "^4.1.0",
    "date-fns": "^4.1.0",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.18.1",
    "govuk-frontend": "^5.9.0",
    "helmet": "^8.1.0",
    "hmpo-form-wizard": "^13.0.2",
    "http-errors": "^2.0.0",
    "jquery": "^3.7.1",
    "jwt-decode": "^4.0.0",
    "lodash": "4.17.21",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "prom-client": "^15.1.3",
    "redis": "^5.0.0",
    "source-map-support": "^0.5.21",
    "superagent": "^10.2.0",
    "url-value-parser": "^2.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@jgoz/esbuild-plugin-typecheck": "^4.0.3",
    "@ministryofjustice/eslint-config-hmpps": "^0.0.1-beta.2",
    "@tsconfig/node22": "^22.0.1",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.7.5",
    "@types/connect-flash": "0.0.40",
    "@types/cookie-parser": "^1.4.8",
    "@types/express-session": "^1.18.1",
    "@types/cookie-session": "^2.0.49",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.14.0",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.17",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "audit-ci": "^7.1.0",
    "aws-sdk-client-mock": "^4.1.0",
    "chokidar": "^3.6.0",
    "concurrently": "^9.1.2",
    "cookie-session": "^2.1.0",
    "cypress": "^14.3.0",
    "cypress-axe": "^1.6.0",
    "cypress-multi-reporters": "^2.0.5",
    "dotenv": "^16.4.7",
    "esbuild": "^0.25.1",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "fishery": "^2.2.2",
    "glob": "^11.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.1.0",
    "jest-junit": "^16.0.0",
    "jest-mock": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.5.0",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^14.0.3",
    "prettier": "^3.5.3",
    "prettier-plugin-jinja-template": "^2.0.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "@jgoz/esbuild-plugin-typecheck": {
      "esbuild": "$esbuild"
    },
    "jest": {
      "jest-core": {
        "micromatch": "4.0.8"
      }
    }
  }
}
