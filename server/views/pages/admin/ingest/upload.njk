{% extends "../../../partials/layout.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/file-upload/macro.njk" import govukFileUpload %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% set title = "Change residential location status" %}

{% block heading %}
  <h1 class="govuk-heading-l">Upload cell cert data</h1>
{% endblock %}

{% block beforeContent %}
  <div class="govuk-width-container">
    <div class="govuk-grid-row govuk-!-margin-bottom-0">
      <div class="govuk-grid-column-two-thirds">
        {{ govukBackLink({
          text: "Back",
          href: backLink
        }) }}

        {% if errorlist.length %}
          {{ govukErrorSummary({
            titleText: "There is a problem",
            errorList: validationErrors,
            classes: "govuk-!-margin-top-7 govuk-!-margin-bottom-0"
          }) }}
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}

{% set resiHtml %}
  <span class="hmpps-inactive-location-banner">
      {{ govukSummaryList({rows:[
        {
          key: {
          text: 'Prison'
        },
          value: {
          text: prisonConfiguration.prisonId
        }
        }
      ],
        classes: 'hmpps-inactive-location-banner-summary-list' }) }}
  </span>
{% endset %}

{% block content %}
  {% set formMethod = options.method | default('post') %}
  {% set formAction = options.action | default('') %}

  <div class="govuk-width-container">
    <div class="govuk-grid-row govuk-!-margin-bottom-0">
      <div class="govuk-grid-column-two-thirds">
        <form method="{{ formMethod }}" action="{{ formAction }}?_csrf={{ csrfToken }}" enctype="multipart/form-data">

          {{ govukNotificationBanner({
            html: resiHtml,
            classes: 'govuk-notification-banner__headerless',
            attributes: {
              'data-qa': 'inactive-location-banner'
            }
          }) }}

          {% block fields %}
            {% for key, fieldsOptions in fields %}
              {% if fieldsOptions.component and not fieldsOptions.skip %}
                {{ callAsMacro(fieldsOptions.component)(fieldsOptions) }}
              {% endif %}
            {% endfor %}
          {% endblock %}

          {{ govukDetails({
            summaryText: "How to use a file upload",
            html: howToUseCSVFile()
          }) }}

          <div class="govuk-button-group">
            {% block formActions %}
              {% block submitAction %}
                {{ govukButton({
                  text: "Upload",
                  classes: options.buttonClasses,
                  preventDoubleClick: true,
                  type: "submit"
                }) }}


              {% endblock %}
            {% endblock %}
          </div>
        </form>

        <p class="govuk-body">
          <a href="{{ cancelLink }}" class="govuk-link govuk-link--no-visited-state">
            Cancel and return to prison configuration details
          </a>
        </p>
      </div>
    </div>
  </div>
{% endblock %}

{% macro howToUseCSVFile() %}
  <p class="govuk-body">Download the template if you need one, then add the relevant details.</p>
  <p class="govuk-body">Download the <a href="/assets/downloads/cert-upload.csv" download>cert upload template</a> (CSV, 1kb)</p>
{% endmacro %}
