{% extends "../../../partials/formStep.njk" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% block fields %}
  {{ govukSummaryList({
    card: {
      title: {
        text: "Deactivation details"
      },
      actions: {
        items: [ { href: backLink, text: "Change" } ]
      }
    },
    rows: [
      {
        key: { text: "Reason" },
        value: { text: deactivationReason }
      },
      {
        key: { text: "Estimated reactivation date" },
        value: { text: (values.estimatedReactivationDate | formatDate) or "Not provided" }
      },
      {
        key: { text: "Planet FM reference number" },
        value: { text: values.planetFmReference or "Not provided" }
      }
    ]
  }) }}

  <div class="govuk-!-padding-bottom-2 change-summary">
    <h2 class="govuk-heading-m">Change to establishment capacity</h2>

    {% if decoratedLocation.raw.locationType != 'CELL' %}
      {{ govukWarningText({
        text: "Every cell in " + decoratedLocation.displayName + " will be deactivated.",
        iconFallbackText: "Warning"
      }) }}
    {% endif %}

    <p>{{ changeSummary | safe }}</p>
  </div>
{% endblock %}
