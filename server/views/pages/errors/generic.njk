{% extends "../../partials/layout.njk" %}

{% set title = "Sorry, there is a problem with this service" %}

{% block pageTitle %}{{ applicationName }} - Error{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <p>
          Try again later.
        </p>

        <p>
          Any information you entered has not been saved. You will need to start again.
        </p>

        <p>
          <a href="/">Return to Residential locations</a>
        </p>

        {% if errorMessage or errorStack %}
          <h2 class="govuk-heading-m">{{ errorMessage }}</h2>
          <pre>{{ errorStack }}</pre>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}
