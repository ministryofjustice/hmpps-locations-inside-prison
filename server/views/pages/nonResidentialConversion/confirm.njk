{% extends "../../partials/formStep.njk" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}


{% block fields %}
  {{ govukSummaryList({
    card: {
      title: { text: "Non-residential details" },
      actions: {
        items: [ { href: backLink, text: "Change" } ]
      }
    },
    rows: [
      {
        key: { text: "Non-residential room" },
        value: { text: convertedCellTypeDetails }
      }
    ]
  }) }}

  <div class="govuk-!-padding-bottom-2 change-summary">
    <h2 class="govuk-heading-m">Change to establishment capacity</h2>

    {{ govukWarningText({
      text: "This cell will be decertified.",
      iconFallbackText: "Warning",
      classes: "govuk-!-margin-bottom-5"
    }) }}

    <p>{{ changeSummary | safe }}</p>
  </div>
{% endblock %}
